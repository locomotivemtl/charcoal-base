{
    "properties": {
        "publish_date": {
            "type": "date-time",
            "label": {
                "en": "Publish date",
                "fr": "Date de publication"
            }
        },
        "expiry_date": {
            "type": "date-time",
            "label": {
                "en": "Expiry date",
                "fr": "Date d'expiration"
            }
        },
        "publish_status": {
            "type": "string",
            "input_type": "charcoal/admin/property/input/select",
            "label": {
                "en": "Publish status",
                "fr": "Status de publication"
            },
            "choices": {
                "draft": {
                    "label": {
                        "en": "Draft",
                        "fr": "Brouillon"
                    }
                },
                "pending": {
                    "label": {
                        "en": "Pending Approval",
                        "fr": "En attente d'approbation"
                    }
                },
                "published": {
                    "label": {
                        "en": "Published",
                        "fr": "Publiée"
                    }
                }
            },
            "description": {
                "en": "Only the \"Published\" items should be shown on the website.",
                "fr": "Seuls les items \"publiés\" seront affichés sur le site web."
            }
        }
    }
}
